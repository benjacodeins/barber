# Configuración de Django
DJANGO_SECRET_KEY=tu-clave-secreta-super-segura-aqui-cambiar-en-produccion
DJANGO_DEBUG=False

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=tu-usuario.pythonanywhere.com,localhost,127.0.0.1

# Configuración de Base de Datos MySQL (PythonAnywhere)
DB_NAME=tu-usuario$nombre_base_datos
DB_USER=tu-usuario
DB_PASSWORD=tu-password-mysql
DB_HOST=tu-usuario.mysql.pythonanywhere-services.com

# Notas:
# - Reemplaza "tu-usuario" con tu nombre de usuario de PythonAnywhere
# - El nombre de la base de datos en PythonAnywhere debe tener el formato: usuario$nombredb
# - El host de MySQL es: usuario.mysql.pythonanywhere-services.com
# - Genera una SECRET_KEY segura con: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
